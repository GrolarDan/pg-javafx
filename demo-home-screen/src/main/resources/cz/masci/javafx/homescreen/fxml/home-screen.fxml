        fx:controller="cz.masci.javafx.homescreen.controller.HomeScreenController"
        stylesheets="@../css/home-screen.css">
    <children>
        <GridPane gridLinesVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="80" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="80" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="80" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <MFXButton fx:id="btn1" buttonType="RAISED" styleClass="home-screen-button" maxWidth="Infinity" maxHeight="Infinity" onAction="#btnAction"
                        text="Button 1"/>
                <MFXButton fx:id="btn2" buttonType="RAISED" styleClass="home-screen-button" maxWidth="Infinity" maxHeight="Infinity" onAction="#btnAction"
                        text="Button 2" GridPane.columnIndex="1"/>
                <MFXButton fx:id="btn3" buttonType="RAISED" styleClass="home-screen-button" maxWidth="Infinity" maxHeight="Infinity" onAction="#btnAction"
                        text="Button 3" GridPane.rowIndex="1"/>
                <MFXButton fx:id="btn4" buttonType="RAISED" styleClass="home-screen-button" maxWidth="Infinity" maxHeight="Infinity" onAction="#btnAction"
                        text="Button 4" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <MFXButton fx:id="btn5" buttonType="RAISED" styleClass="home-screen-button" maxWidth="Infinity" maxHeight="Infinity" onAction="#btnAction"
                        text="Button 5" GridPane.rowIndex="2"/>
                <MFXButton fx:id="btn6" buttonType="RAISED" styleClass="home-screen-button" maxWidth="Infinity" maxHeight="Infinity" onAction="#btnAction"
                        text="Button 6" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
